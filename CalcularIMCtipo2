Algoritmo "CalculoIMC2"
// Algoritmo para calcular o IMC - Peso ideal
Var
Peso, Altura, IMC: Real;
Inicio
      Escreva ("Qual teu peso?")
      Leia (Peso)
      Escreva ("Qual tua altura?")
      Leia (Altura)
      IMC <- Peso / (Altura ^ 2)
      Escreval ("Teu IMC é:", IMC:5:2)
      Se (IMC < 17) entao
         Escreva ("Muito abaixo do peso")
      Senao
         Se (IMC >= 17) e (IMC < 18.5) entao
            Escreva ("Abaixo do peso")
         fimse
         Se (IMC >= 18.5) e (IMC < 25) entao
            Escreva ("Peso ideal")
         fimse
         Se (IMC >= 25) e (IMC < 30) entao
            Escreva ("Sobrepeso")
         fimse
         Se (IMC >= 30) e (IMC < 35) entao
            Escreva ("Obesidade")
         fimse
         Se (IMC >= 35) e (IMC < 40) entao
            Escreva ("Obesidade severa")
         fimse
         Se (IMC >= 40) entao
            Escreva ("Obesidade mórbida")
         fimse
      Fimse
Fimalgoritmo